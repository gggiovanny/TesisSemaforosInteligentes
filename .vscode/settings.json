{
  "actionButtons": {
    "defaultColor": "#ff0034", // Can also use string color names.
    "loadNpmCommands": false, // Disables automatic generation of actions for npm commands.
    "reloadButton": "♻️", // Custom reload button text or icon (default ↻). null value enables automatic reload on configuration change
    "commands": [
      {
        "cwd": "${fileDirname}",
        "name": "md to tex cap_template",
        "color": "white",
        "singleInstance": true,
        "command": "pandoc -f markdown -t latex --out ${fileBasenameNoExtension}.tex --template cap_template.tex ${fileBasename}",
      },
      {
        "cwd": "${fileDirname}",
        "name": "md to tex template", //? Comando genérico que intenta aplicar una plantilla con el mismo nombre que el archivo  pero con _template al final
        "color": "white",
        "singleInstance": true,
        "command": "pandoc -f markdown -t latex ${fileBasename} --template ${fileBasenameNoExtension}_template.tex --out ${fileBasenameNoExtension}.tex",
      },
      // {
      //   "cwd": "${workspaceFolder}", // Terminal initial folder ${workspaceFolder} and os user home as defaults
      //   "name": "md to pdf",
      //   "color": "white",
      //   "singleInstance": true,
      //   "command": "pandoc ${relativeFile} --filter=pandoc-citeproc --bibliography=.\\mendeley\\tesis_tls_cimat.bib --csl=.\\mendeley\\apa7-spanish.csl -M lang:es -o ${fileDirname}\\${fileBasenameNoExtension}.pdf", // This is executed in the terminal.
      // },
    ]
  },
  "saveAndRun": {
    "commands": [
      {
        "match": "\\.*cap_.*.*.md$",
        "cmd": "cd ${fileDirname} ; pandoc -f markdown -t latex --out ${fileBasenameNoExt}.tex --template cap_template.tex ${fileBasename}",
        "useShortcut": false,
        "silent": true
      }
    ]
  },
  "latex-workshop.latex.search.rootFiles.include": [
    "**/ITMtesis.tex"
  ],
  "latex-workshop.latex.watch.files.ignore": [
    "**/*.bbx",
    "**/*.cbx",
    "**/*.cfg",
    "**/*.clo",
    "**/*.cnf",
    "**/*.def",
    "**/*.fmt",
    "**/*.lbx",
    "**/*.map",
    "**/*.pfb",
    "**/*.tfm",
    "**/texmf-{dist,var}/**",
    "C:/**texmf/**",
    "/usr/local/share/miktex-texmf/**",
    "/Library/Application Support/MiKTeX/texmfs/**",
    "**/*borrador*.*",
  ],
  "latex-workshop.latex.autoBuild.run": "onFileChange",
  "peacock.color": "#1857a4",
  "languageTool.language": "es",
  "ltex.language": "es",
  // "latex-workshop.latex.autoBuild.run": "never",
}